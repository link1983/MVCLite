
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head lang="en">
    <meta charset="UTF-8">
    <title>会员注册</title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="format-detection" content="telephone=no">
    <meta name="renderer" content="webkit">
    <meta http-equiv="Cache-Control" content="no-siteapp" />
    <link href="~/Content/AmazeUI/assets/css/amazeui.min.css" rel="stylesheet" />
    <script src="~/Content/JS/jquery.min-2.1.1.js"></script>
    <script src="~/Content/AmazeUI/assets/js/amazeui.min.js"></script>
    <style>
        .header {
            text-align: center;
        }

            .header h1 {
                font-size: 200%;
                color: #333;
                margin-top: 30px;
            }

            .header p {
                font-size: 14px;
            }
    </style>
</head>
<body>
    <div class="header">
        <div class="am-g">
            <h1>葛氏集团之家</h1>
            <p>欢迎光临！</p>
        </div>
        <hr />
    </div>
    <div class="am-g">
        <div class="am-u-lg-6 am-u-md-8 am-u-sm-centered">
            <h3>会员注册</h3>
            <hr>
            <div class="am-btn-group">
                <a href="#" class="am-btn am-btn-secondary am-btn-sm"><i class="am-icon-github am-icon-sm"></i> Github</a>
                <a href="#" class="am-btn am-btn-success am-btn-sm"><i class="am-icon-google-plus-square am-icon-sm"></i> Google+</a>
                <a href="#" class="am-btn am-btn-primary am-btn-sm"><i class="am-icon-stack-overflow am-icon-sm"></i> stackOverflow</a>
            </div>
            <br>
            <br>

            <form method="post" class="am-form" data-am-validator>
                <label for="email">用户名:</label>
                <input type="text" name="name" id="email" value="" minlength="3" maxlength="16" placeholder="输入用户名（至少 3 个字符）" required>
                <br>
                <label for="password">密码:</label>
                <input type="password" name="password" id="password" value="" required>
                <br>
                <label for="password">确认密码:</label>
                <input type="password" name="" id="password2" value="" placeholder="输入一样的密码" data-equal-to="#password" required>
                <br />
                <div class="am-cf">
                    <input type="submit" name="" value="注 册" class="am-btn am-btn-primary am-btn-sm am-fl">
                    <input type="submit" name="" value="忘记密码 ^_^? " class="am-btn am-btn-default am-btn-sm am-fr">
                </div>
                <div style="color:red;">@Html.ValidationSummary()</div>
            </form>
            <hr>
            <p>© 2018 葛氏集团.</p>
        </div>
    </div>
</body>
</html>
