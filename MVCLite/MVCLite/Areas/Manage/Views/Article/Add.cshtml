@model MVCLite.Areas.Manage.ViewModels.ArticleAdd
@{
    ViewBag.Title = "新增笔记";
    Layout = "~/Areas/Manage/Views/Shared/_Layout.cshtml";
}

@section Header
{
<script src="~/Content/Ueditor/ueditor.config.js"></script>
<script src="~/Content/Ueditor/ueditor.all.min.js"></script>
<script src="~/Content/Ueditor/lang/zh-cn/zh-cn.js"></script>
    }

<form method="post" class="form-x" action="">
    <div class="form-group">
        <div class="label">
            <label>标题：</label>
        </div>
        <div class="field">
            @Html.TextBoxFor(m => m.Title, new { @class = "input" })
            <div class="tips">@Html.ValidationMessageFor(m => m.Title)</div>
        </div>
    </div>
    <div class="form-group">
        <div class="label">
            <label>分类：</label>
        </div>
        <div class="field">
            <select name="cid" class="input w50">
                <option value="1">我的笔记</option>
                <option value="2">蓝天大海</option>
            </select>
            <div class="tips">@Html.ValidationMessageFor(m => m.CID)</div>
        </div>
    </div>
    <div class="form-group">
        <div class="label">
            <label>内容：</label>
        </div>
        <div class="field">
            <script id="editor" type="text/plain" name="Content" style="width:1024px;height:500px;">
            </script>
            <div class="tips">@Html.ValidationMessageFor(m => m.Content)</div>
        </div>
    </div>
    <div class="form-group">
        <div class="label">
            <label></label>
        </div>
        <div class="field">
            <button class="button bg-main icon-check-square-o" type="submit"> 提交</button>
        </div>
    </div>
    
</form>
<script type="text/javascript">

    //实例化编辑器
    //建议使用工厂方法getEditor创建和引用编辑器实例，如果在某个闭包下引用该编辑器，直接调用UE.getEditor('editor')就能拿到相关的实例
    var ue = UE.getEditor('editor');
</script>

