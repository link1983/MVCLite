@model MVCLite.Areas.Manage.ViewModels.ArticleAdd
@{
    ViewBag.Title = "新增笔记";
    Layout = "~/Areas/Manage/Views/Shared/_Layout.cshtml";
}

<form method="post" class="form-x" action="">
    <div class="form-group">
        <div class="label">
            <label>标题：</label>
        </div>
        <div class="field">
            @Html.TextBoxFor(m => m.Title, new { @class = "input" })
            <div class="tips">@Html.ValidationMessageFor(m => m.Title)</div>
        </div>
    </div>
    <div class="form-group">
        <div class="label">
            <label>分类：</label>
        </div>
        <div class="field">
            <select name="cid" class="input w50">
                <option value="default">我的笔记</option>
                <option value="blue">蓝天大海</option>
            </select>
            <div class="tips"></div>
        </div>
    </div>
    <div class="form-group">
        <div class="label">
            <label>内容：</label>
        </div>
        <div class="field">
            @Html.TextAreaFor(m => m.Content, new { @class = "input" })
            <div class="tips">@Html.ValidationMessageFor(m => m.Content)</div>
        </div>
    </div>
    <div class="form-group">
        <div class="label">
            <label></label>
        </div>
        <div class="field">
            <button class="button bg-main icon-check-square-o" type="submit"> 提交</button>
        </div>
    </div>
    
</form>

